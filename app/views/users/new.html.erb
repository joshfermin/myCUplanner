<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
    <div class="row">
        <div class="row-fluid">
          <div class="span2">
            <%= form_for(@user) do |f| %>

                <%= render 'shared/error_messages' %>

                <%= f.label :name %>
                <%= f.text_field :name %>

                <%= f.label :email, "Email (@colorado.edu)" %>
                <%= f.text_field :email %>

                <%= f.label :password %>
                <%= f.password_field :password %>

                <%= f.label :password_confirmation, "Confirm Password" %>
                <%= f.password_field :password_confirmation %>
          </div>

          <div class="span10">
            <div class="hero-unit">
              <%= f.label :courses_taken, "CSCI 1300"%>
              <%= f.check_box :courses_taken, { :multiple => true }, "1300", nil %>
              <%= f.label :courses_taken, "CSCI 2270"%>
              <%= f.check_box :courses_taken, { :multiple => true }, "2270", nil %>

              <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
            </div>
          </div>

        <% end %>
      </div>
    </div>
</div>