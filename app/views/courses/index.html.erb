<h1>Listing Courses</h1>

<%= form_tag edit_multiple_courses_path do %> 
  <table class = "table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Subject Area</th>
        <th>Course Number</th>
        <th>Extension Number</th>
        <th>Course Title</th>
        <th>Instructor</th>
        <th>Day</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Building</th>
        <th>Room</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= check_box_tag "course_ids[]", course.id %></td>
          <td><%= course.subject_area %></td>
          <td><%= course.course_number %></td>
          <td><%= course.ext_number %></td>
          <td><%= course.course_title %></td>
          <td><%= course.instructor %></td>
          <td><%= course.day %></td>
          <td><%=if course.start_time != nil
                   course.start_time.localtime.strftime('%H:%M %Z')
                 end
          %></td>
          <td><%= if course.end_time != nil
                    course.end_time.localtime.strftime('%H:%M %Z')
                  end
          %></td>
          <td><%= course.building %></td>
          <td><%= course.room %></td>
          <td><%= link_to 'Show', course %></td>
          <!--<td><#%= link_to 'Edit', edit_course_path(course) %></td>-->
          <!--<td><#%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= submit_tag "Edit Checked" %>
<% end %> 
<br>

