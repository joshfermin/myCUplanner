<h1>Current Schedule</h1>

<table class = "table table-striped table-hover">
  <tr>
    <th>Title</th>
    <th>Starts at</th>
    <th>Ends at</th>
    <th>All day</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= if event.starts_at != nil
                  event.starts_at.localtime.to_formatted_s(:long)
                end%></td>
        <td><%= if event.ends_at != nil
                  event.ends_at.localtime.to_formatted_s(:long)
                end%></td>
        <td><%= event.all_day %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
  <% end %>
</table>

